generator client {
    provider = "prisma-client-js"
        engineType = "library"
        previewFeatures = ["driverAdapters"]
}

datasource db {
    provider = "sqlite"
        url      = "file:./dev.db"
}

model Task {
    id          String   @id @default(uuid())
        title       String
        description String?
        status      String   @default("PENDING")
        createdAt   DateTime @default(now())
        updatedAt   DateTime @updatedAt

        @@map("tasks")
}
